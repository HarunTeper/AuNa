{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ROS2Build-AunaGazebo",
            "type": "shell",
            "command": "cd packages && colcon build --packages-select auna_gazebo auna_common auna_msgs etsi_its_msgs --symlink-install --cmake-args -DCMAKE_EXPORT_COMPILE_COMMANDS=ON && mv build/compile_commands.json ..",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "LaunchGazebo",
            "type": "shell",
            "command": "cd packages && source install/setup.bash && ros2 launch auna_gazebo gazebo_world.launch.py",
            "problemMatcher": []
        },
        {
            "label": "LaunchSingleRobotSpawn",
            "type": "shell",
            "command": "cd packages && source install/setup.bash && ros2 launch auna_gazebo spawn_single_robot.launch.py namespace:=${input:robotNamespace}",
            "problemMatcher": [],
        },
        {
            "label": "LaunchMultiRobotSpawn",
            "type": "shell",
            "command": "cd packages && source install/setup.bash && ros2 launch auna_gazebo spawn_multi_robot.launch.py robot_number:=${input:robotCount}",
            "problemMatcher": []
        },
        {
            "label": "LaunchGroundTruthLocalization",
            "type": "shell",
            "command": "cd packages && source install/setup.bash && ros2 launch auna_gazebo ground_truth_localization.launch.py namespace:=${input:robotNamespace}",
            "problemMatcher": [],
        },
    ],
    "inputs": [
        {
            "id": "robotNamespace",
            "type": "promptString",
            "description": "Enter the robot namespace",
            "default": "robot1"
        },
        {
            "id": "robotCount",
            "type": "promptString",
            "description": "Enter the number of robots to spawn",
            "default": "2"
        }
    ]
}